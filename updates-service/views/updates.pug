doctype
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN", crossorigin="anonymous")
        title Updates
    body
        .container
            nav.navbar.navbar-light
                form.form-inline
                    input.form-control.mr-sm-1#search-field(type="number", placeholder="User ID", aria-label="search")
                    button.btn.my-2.my-sm-0#search-button(type="button") Search
                    p#drop(style="cursor: pointer") X

            - var idQuery = id ? `&id=${id}` : ''
            - var limitQuery = limit ? `&limit=${limit}` : ''
            if page > 1
                a(href="/updates/list?page=" + (page - 1) + idQuery + limitQuery) <
            if page < maxPage
                a(href="/updates/list?page=" + (page + 1) + idQuery + limitQuery) >
            
            table.table
                thead
                    tr
                        th(scope="col") #
                        th(scope="col") id
                        th(scope="col") userId
                        th(scope="col") date
                        th(scope="col") action
                        th(scope="col") ip
                        th(scope="col") data
                tbody
                    each action, index in actions
                        tr
                            th(scope="col")= index + 1
                            td= action.id
                            td= action.userId
                            td= action.date.toLocaleString('ru-RU')
                            td= action.action
                            td= action.ip
                            td= action.data || "null"
    
    script(src="/public/list.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL", crossorigin="anonymous")
